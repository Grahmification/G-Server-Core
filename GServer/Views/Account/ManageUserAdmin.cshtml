@model GServer.Models.ManageUserAdminViewModel

    <h2>Manage User Account</h2>

<div class="row">
    <div class="col-md-12">
        <section id="manageForm">
            @using (Html.BeginForm("ManageUserAdmin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken() <hr />

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <text>@ViewBag.UserName</text>

                    @Html.HiddenFor(m => m.UserName, new { @class = "form-control" })
                </div>
                    
                <h4>Edit User Priviledges:</h4>

                <div class="form-group">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Permission</th>
                                <th scope="col">Enabled</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (string key in Model.UserRoles.Keys)
                                {
                                    <tr>
                                        <th scope="row">@key</th>
                                        <td>
                                            @Html.CheckBoxFor(m => m.UserRoles[key])
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="form-group">
                    <div class="col-md-12" align="center">
                        <input type="submit" value="Update User Settings" class="btn btn-primary" />
                        <input type="button" value="Cancel" onclick="javascript:document.location.href='@Url.Action("ManageAccounts", "Account")'" class="btn btn-danger" />
                    </div>
                </div>
                }
            </section>
    </div>
</div>



@section Scripts {
