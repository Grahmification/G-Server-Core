@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
  
    <div class="dropdown">

        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> @User.Identity.Name <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            <li class="divider"></li>
            <li>@Html.ActionLink("Manage Account", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })</li>


            @if (User.IsInRole("Admin"))
            {
                <li class="dropdown-header">Admin Control</li>
                <li>@Html.ActionLink("Manage Accounts", "ManageAccounts", "Account")</li>
            }

        </ul>
    </div>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>


}